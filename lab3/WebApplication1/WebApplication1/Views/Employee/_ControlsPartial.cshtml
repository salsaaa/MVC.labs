@model int
<div class="btn-group" role="group" aria-label="Basic example">
    <a href="@Url.Action("Details","Employee",new { id = Model })" class="btn btn-primary btn-sm">
        <i class="fa fa-eye"></i>

    </a>
    <a href="@Url.Action("Edit","Employee",new { id = Model })" class="btn btn-success btn-sm">
