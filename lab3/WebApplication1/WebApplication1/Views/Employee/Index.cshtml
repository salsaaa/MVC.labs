@model List<Employee>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee</title>
    
</head>
<body>
    @*<a href="/Home/RegisterForm">Register here</a>*@
    <div class="container">

@Html.ActionLink("+ Add new employee", "RegisterForm","Employee",null,new { @class="btn btn-primary"})
        <hr/>
@if( Model.Count > 0)
{
        <table class="table table-hover table-striped">
            <thead>

                <tr>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
    @foreach (Employee emp in Model)
    {
      @Html.Partial("_EmployeePartial", emp);
        @*@Html.Action("EmployeePartial") estbdlt bdalha partial 3ltol*@
    }
     
            </tbody>

        </table>
}
else{ 
      <div class="alert alert" >
          No employees found.
      </div>  
        }
	
    </div>

</body>
</html>


